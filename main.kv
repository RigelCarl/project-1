<testApp>:
    Screen:
        Image:
            source: "reageltechz_logo.png"
            pos_hint: {'center_y':.8}

        MDLabel:
            text: "Welcome User"
            font_size: "20dp"
            halign: "center"
            color: "#FF5623"
            pos_hint: {'center_y':.12}
        MDTextField:
            hint_text: "Username"
            icon_right: 'account'
            font_size: "20dp" #recommended size for android 14 to 16 dp
            size_hint_x: .85
            pos_hint: {'center_x':.5, 'center_y':.58}
            on_text: self.text = self.text.replace(" ", "")
            write_tab: False

        MDTextField:
            id: psswd
            hint_text: "Password"
            password: True
            icon_right: 'eye-off'
            font_size: "20dp" #recommended size for android 14 to 16 dp
            size_hint_x: .85
            pos_hint: {'center_x':.5, 'center_y':.5}
            on_text: self.text = self.text.replace(" ", "")
            write_tab: False

        BoxLayout:
            size_hint: .85, None
            height: "30dp"
            pos_hint: {'center_x':.5, 'center_y':.4}
            spacing: "5dp"
            MDCheckbox:
                id: cb
                size_hint: None, None
                width: "30dp"
                height: "30dp"
                pos_hint: {'center_x':.5, 'center_y':.5}
                on_press:
                    psswd.password = False if psswd.password == True else True
                    psswd.icon_right = "eye" if psswd.icon_right == "eye-off" else "eye-off"

            MDLabel:
                text: "[ref=Show Password]Show Password[/ref]"
                markup: True
                pos_hint: {'center_x':.5, 'center_y':.5}
                on_ref_press:
                    cb.active = False if cb.active == True else True
                    psswd.password = False if psswd.password == True else True
                    psswd.icon_right = "eye" if psswd.icon_right == "eye-off" else "eye-off"

        BoxLayout:
            size_hint: .6, None
            height: "30dp"
            pos_hint: {'center_x':.5, 'center_y':.3}
            spacing: "15dp"
            MDFlatButton:
                text: "SIGN IN"
                font_size: "22dp" #recommended font size for andriod 16 to 20 dp
                size_hint_x: 1
                md_bg_color: "#FF5623"
            MDFlatButton:
                text: "SIGN UP"
                font_size: "22dp" #recommended font size for andriod 16 to 20 dp
                size_hint_x: 1
                md_bg_color: "#FF5623"